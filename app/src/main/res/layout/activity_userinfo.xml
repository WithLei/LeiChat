<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="今天爆屏事件：\n     顺丰公司值得我们深思和学习：上合峰会期间,青岛地区快递三轮被禁上路，大部分快递公司已处于休假模式，而顺丰坚持青岛五区徒步送货模式！你做不到的，别人却做到了，这就是成功的秘诀！\n
     你难，其实别人也难。老天是公平的，天天谈成功谈理想，不如动手解决眼下的难题，逢山开路，遇水架桥。办法总比困难多，把工作做到极致，这就是工作态度，也是体现责任，更能反映你的能力！
     人与人之间之所以大不同，就在此能找到答案。"
            android:textSize="18dp" />
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/scrollView"
        android:background="#DDDDDD" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scrollView"
        android:background="#00000000"
        android:text="添加标签"
        android:textColor="#02e6d6"
        android:textSize="20sp" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button1"
        android:background="#ffffff"
        android:text="阅读"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:background="#01ceed"
        android:text="旅行"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:background="#01ceed"
        android:text="开发心得"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:background="#01ceed"
        android:text="前端设计"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:background="#ffffff"
        android:text="商务合作"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button5"
        android:background="#00000000"
        android:text="增加照片或视频"
        android:textColor="#02e6d6"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/play_id"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_above="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:layout_alignRight="@+id/button6"
        android:onClick="play" />

    <ImageButton
        android:id="@+id/cha_id"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button6"
        android:onClick="cha" />

    <ImageButton
        android:id="@+id/cha1_id"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_below="@+id/button6"
        android:onClick="cha" />

    <ImageButton
        android:id="@+id/tu_id"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_below="@+id/button6"
        android:onClick="tu" />

    <ImageButton
        android:id="@+id/kuang_id"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cha_id"
        android:layout_marginTop="13dp"
        android:onClick="kuang" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/kuang_id"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/kuang_id"
        android:layout_toRightOf="@+id/kuang_id"
        android:text="浙江 杭州 下沙高教园区2号大街5号"
        android:textColor="#049dfc"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/kuang1_id"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:onClick="kuang" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:text="提醒事项"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="335dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:background="#01ceed"
        android:text="更新"
        android:textColor="#ffffff"
        android:textSize="24sp" />

</RelativeLayout>